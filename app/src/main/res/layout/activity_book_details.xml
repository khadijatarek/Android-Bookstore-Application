<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10sp"
    tools:context=".BookDetails">

    <ImageView
        android:id="@+id/book_image"
        android:layout_width="238dp"
        android:layout_height="230dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/book_name"
        android:layout_width="189dp"
        android:layout_height="26dp"
        android:layout_below="@+id/book_image"
        android:layout_alignStart="@+id/book_image"
        android:layout_alignEnd="@+id/book_image"
        android:layout_marginTop="12dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/book_image"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/book_image"
        app:layout_constraintTop_toBottomOf="@+id/book_image" />

    <TextView
        android:id="@+id/Author"
        android:layout_width="362dp"
        android:layout_height="41dp"
        android:layout_alignStart="@+id/book_name"
        android:layout_alignEnd="@+id/book_name"
        android:layout_alignBottom="@+id/book_name"
        android:layout_marginTop="344dp"
        android:text="author"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="10dp" />

    <TextView
        android:id="@+id/About"
        android:layout_width="374dp"
        android:layout_height="28dp"
        android:layout_alignStart="@+id/Author"
        android:layout_alignEnd="@+id/Author"
        android:layout_alignBottom="@+id/Author"
        android:layout_marginTop="20dp"
        android:text="about"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/Author"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/Author"
        app:layout_constraintTop_toBottomOf="@+id/Author" />

    <TextView
        android:id="@+id/price"
        android:layout_width="373dp"
        android:layout_height="39dp"
        android:layout_below="@+id/About"
        android:layout_alignStart="@+id/About"
        android:layout_alignEnd="@+id/About"
        android:layout_marginTop="12dp"
        android:text="price"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/Genre"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/Genre"
        app:layout_constraintTop_toBottomOf="@+id/Genre" />

    <TextView
        android:id="@+id/Genre"
        android:layout_width="377dp"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:text="genre"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/About"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/About"
        app:layout_constraintTop_toBottomOf="@+id/About" />

    <Button
        android:id="@+id/addcart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Add to Cart"
        app:layout_constraintStart_toStartOf="@+id/price"
        app:layout_constraintTop_toBottomOf="@+id/price" />

    <Button
        android:id="@+id/addfav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="Add to Favourites"
        app:layout_constraintEnd_toEndOf="@+id/price"
        app:layout_constraintTop_toBottomOf="@+id/price" />

</androidx.constraintlayout.widget.ConstraintLayout >